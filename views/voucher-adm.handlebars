                        <div class="white-text geral-voucher">
                            <span class="card-title kit-flex fonte-primaria title-voucher">Voucher</span>
                            <div class="row">
                                <div class="input-field">
                                    <input placeholder="Nome do Voucher" id="nome" type="text" maxlength="30px"
                                        class="kit-flex inp-nome inp">
                                    <label class="white-text" for="nome">Nome</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field">
                                    <select id="select_aplicacao" class="select_aplicacao inp">
                                        <option value="" disabled selected>Aplicação</option>
                                        <option value="feriados">Feriados</option>
                                        <option value="cidades">Cidade</option>
                                        <option value="primeira">Primeira Compra</option>
                                        <option value="porcentagem">Porcentagem</option>
                                    </select>
                                    <label for="select_aplicacao">Aplicação</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field">
                                    <input placeholder="Natal / São Paulo / Presente" id="descricao" type="text"
