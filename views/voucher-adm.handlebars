                                    <select id="select_cidades" class="select_cidades inp">
                                        <option value="" disabled selected>Selecione a cidade</option>
                                        <option value="1">São Luis</option>
                                        <option value="2">São Paulo</option>
                                    </select>
                                    <label for="select_cidades">Cidades</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field">
                                    <input maxlength="6" type="tel" placeholder="R$" id="valor"
                                        class="kit-flex val-inp inp">
                                    <label class="white-text" for="valor">Valor</label>
                                </div>
                            </div>
                            <div class="row kit-flex dv-datas">
                                <div class="input-field">
                                    <input type="text" tabindex="-1" placeholder="dd/mm/aaaa" id="dtInicio"
                                        class="kit-flex pickerinicio inp">
                                    <label class="white-text" for="dtInicio">Data
                                        Início</label>
                                </div>
                                <div class="input-field">
